# Vietnamese Speech-to-Text System - Environment Variables
# Copy this file to .env and update with your values
# On Linux/Mac: cp env.example .env
# On Windows: copy env.example .env

# Application Settings
APP_NAME=Vietnamese Speech-to-Text System
APP_ENV=development
DEBUG=false

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Model Configuration
# Default model sizes
DEFAULT_WHISPER_MODEL=base
DEFAULT_PHOWHISPER_MODEL=medium

# Model cache directories
TRANSFORMERS_CACHE=/root/.cache/huggingface
HF_HOME=/root/.cache/huggingface
WHISPER_CACHE=/root/.cache/whisper

# Resource Limits
MAX_AUDIO_DURATION=3600
MAX_UPLOAD_SIZE=200
MAX_MEMORY_USAGE=8192

# GPU Configuration (auto-detect if not set)
CUDA_VISIBLE_DEVICES=
USE_GPU=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Temporary Files
TEMP_DIR=./temp
CLEANUP_TEMP_FILES=true

# Export Settings
EXPORT_DIR=./export
MAX_EXPORT_FILES=100

# Security (for production)
SECRET_KEY=
ALLOWED_ORIGINS=*

# HuggingFace Token (optional, for private models)
HF_TOKEN=

# Development Settings
DEVELOPMENT_MODE=false
HOT_RELOAD=true

